<script>
	var socket = io('http://localhost:3000');
	var chatWindowOpenCloseStatus = 0;
	var user ='Tom';
	var updatedText = '';
	var currentCustomer ='';
	var previousCustomer ='';
	
	usersWaitingOnlineRoomSubscribe();
	
	function selectUserForConversation(){
		var x = document.getElementsByClassName("list-group-item");
		for (i = 0; i < x.length; i++) {
			x[i].onclick=function(){
			
				currentCustomer = $(this).text().trim();
				$("#chatbox").show("slow");
				$("#usersOnline").addClass("disabledbutton");
				chatWithWhomUpdate('Conversation with '+currentCustomer);
				
				if(previousCustomer != ''){
					socket.emit('unsubscribe', previousCustomer);
					document.getElementById('message-container').innerHTML='';
				}
				
				socket.emit('subscribe', currentCustomer);
				
				$('#'+currentCustomer).remove();
				
				document.getElementById('conversationInPgresLst').innerHTML += '<li class="list-group-item list-group-item-action" onclick="selectUserForConversation()" id="'+currentCustomer+'"><a href="#"><span class="glyphicon glyphicon-user"></span> '+currentCustomer+' </a></li>';
				
				previousCustomer = currentCustomer;
			}
		}
	}
	
	function usersWaitingOnlineRoomSubscribe() {
		socket.emit('subscribe', 'usersWaitingOnlineRoom');
	}
	
	socket.on('userWaitingOnline1', function(data){
		//alert('users list updated');
		document.getElementById('usersOnline').innerHTML += '<li class="list-group-item list-group-item-action" onclick="selectUserForConversation()" id="'+data.user+'"><a href="#"><span class="glyphicon glyphicon-user"></span> '+data.user+' </a></li>';
		document.getElementById('waitingUsersList').innerHTML = ''+ data.totalWaitingUsers;
	});
	
	socket.on('userLeft', function(data){
		$('#'+data.user).remove();
		document.getElementById('waitingUsersList').innerHTML = ''+ data.totalWaitingUsers;
	});
	
	socket.on('newmsg', function(data) {
		if(user) {
			if(user===data.user) {
				document.getElementById('message-container').innerHTML += '<div class="message"><div class="avatar"><img class="img-circle avatar" alt="chat avatar" src="/agents/images/avatar1.png"></div><div class="message-text-wrapper"><div class="message-text"><b>' + 
				   data.user + '</b>: ' + data.message + '</div></div></div>';
				
				scrollToBottom();
			}
			else{
				document.getElementById('message-container').innerHTML += '<div class="message message-right"><div class="avatar"><img class="img-circle avatar" alt="chat avatar" src="/agents/images/avatar2.png"></div><div class="message-text-wrapper"><div class="message-text"><b>' + 
	   data.user + '</b>: ' + data.message + '</div></div></div>';
				
				scrollToBottom();
			}
		}
	});
	
	$('#message').keypress(function(event){
		var keycode = (event.keyCode ? event.keyCode : event.which);
		
		if(keycode == '13'){
			sendMessage();
		}
	});
	
	function chatWithWhomUpdate(updatedText) 
	{
		$span = $('#chatWithWhom').find('span')
		$('#chatWithWhom').text(updatedText);
		$('#chatWithWhom').append($span);
	}
	
	function endChat()
	{
		$("#usersOnline").removeClass("disabledbutton");
		$("#chatbox").hide("slow");
		socket.emit('unsubscribe', currentCustomer);
	}
	
	function sendMessage() 
	{
		var msg = document.getElementById('message').value;
		if(msg) {
			socket.emit('msg', { room: currentCustomer, message: msg, user: user});
			document.getElementById('message').value='';
		}
	}
	
	function scrollToBottom() 
	{
		var div = $("#message-container");
		div.scrollTop(div.prop('scrollHeight'));
	}
	
</script>
